<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusableInTouchMode="true"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="com.mynagarsevak.UserDetails"
  tools:showIn="@layout/activity_user_details">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="0dp"
      android:paddingBottom="30dp"
      android:paddingTop="20dp"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Nagarsevak"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textSize="24sp"/>

      <!--app:met_textColorHint="#fff"-->
      <!--app:met_floatingLabelTextColor="#fff"-->
      <!--app:met_textColor="#fff"-->

      <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/user_post_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Full Name"
        app:met_floatingLabel="normal"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabelTextSize="13sp" />

      <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/user_post_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Contact No."
        app:met_minCharacters="10"
        app:met_maxCharacters="10"
        app:met_floatingLabel="normal"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabelTextSize="13sp" />

      <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/user_post_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:met_floatingLabelText="Email Address"
        app:met_floatingLabel="normal"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabelTextSize="13sp" />

      <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/user_post_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Country"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabel="normal" />

      <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/user_post_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="State"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabel="normal" />

      <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/user_post_corporation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Corporation"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabel="normal"  />

      <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/user_post_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Division"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabel="normal" />

      <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/user_post_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Area"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabel="normal" />

      <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/user_post_society"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:hint="Society"
        app:met_floatingLabelTextColor="@color/colorPrimary"
        app:met_floatingLabel="normal" />



      <Button
        android:id="@+id/user_post_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Submit" />
    </LinearLayout>
  </ScrollView>



</android.support.constraint.ConstraintLayout>
